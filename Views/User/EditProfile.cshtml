@model csproject.Models.Users

@{
    ViewData["Title"] = ActionService.ViewActionName;
    if (SessionService.RoleNo == "Demo" || SessionService.RoleNo == "Mis" || SessionService.RoleNo == "Vendor")
        {Layout = "_LayoutAdmin";}
    else
        {Layout = "_LayoutLite";}
    List<SelectListItem> RoleList = new List<SelectListItem>();
    List<SelectListItem> DepartmentList = new List<SelectListItem>();
    List<SelectListItem> GenderList = new List<SelectListItem>();

    using var role = new z_sqlRoles();
    using var dept = new z_sqlDepartments();
    using var gender = new z_sqlGenders();
    RoleList = role.GetDropDownList("RoleNo", "RoleName", "RoleNo", true);
    DepartmentList = dept.GetDropDownList("DeptNo", "DeptName", "DeptNo", true);
    GenderList = gender.GetDropDownList("GenderNo", "GenderName", "GenderNo", false);
}

<div class="card card-size-small mt-5">
    <div class="card header bg-secondary text-white">
        <div class="pt-2 px-2">
            <div class="float-start">
                <h4>@ActionService.ViewActionName</h4>
            </div>
            <div class="float-end">
                <h4>@ActionService.ViewPrgInfo</h4>
            </div>
        </div>
    </div>
    <div class="card body p-2">
        <form asp-action="EditProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.IsValid)
            @Html.HiddenFor(m => m.UserNo)
            @Html.HiddenFor(m => m.UserName)
            @Html.HiddenFor(m => m.Password)
            @* @if (SessionService.RoleNo != "Demo" && SessionService.RoleNo != "Mis" && SessionService.RoleNo == "Vendor") *@
            @if (SessionService.RoleNo == "Demo" || SessionService.RoleNo == "Mis" || SessionService.RoleNo == "Vendor")
            {
                @Html.HiddenFor(m => m.RoleNo)
                @Html.HiddenFor(m => m.DeptNo)
            }

            <div class="row form-group">
                <label asp-for="UserNo" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <span class="control-label">@Model.UserNo</span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="UserName" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <span class="control-label">@Model.UserName</span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="GenderName" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <select asp-for="GenderNo" asp-items="@GenderList" class="form-control"></select>
                    <span asp-validation-for="GenderNo" class="text-danger"></span>
                </div>
            </div>
            @* @if (SessionService.RoleNo != "Demo" && SessionService.RoleNo != "Mis" && SessionService.RoleNo == "Vendor") *@
            @if (SessionService.RoleNo == "Demo" || SessionService.RoleNo == "Mis" || SessionService.RoleNo == "Vendor")
            {
                <div class="row form-group">
                    <label asp-for="DeptName" class="control-label col-md-3"></label>
                    <div class="col-md-9">
                        <select asp-for="DeptNo" asp-items="@DepartmentList" class="form-control"></select>
                        <span asp-validation-for="DeptNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <label asp-for="RoleNo" class="control-label col-md-3"></label>
                    <div class="col-md-9">
                        <select asp-for="RoleNo" asp-items="@RoleList" class="form-control"></select>
                        <span asp-validation-for="RoleNo" class="text-danger"></span>
                    </div>
                </div>
            }
            <div class="row form-group">
                <label asp-for="Birthday" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input type="text" asp-for="Birthday" class="form-control datepicker" />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="OnboardDate" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input type="text"  asp-for="OnboardDate" class="form-control datepicker" />
                    <span asp-validation-for="OnboardDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="LeaveDate" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input type="text"  asp-for="LeaveDate" class="form-control datepicker" />
                    <span asp-validation-for="LeaveDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="ContactEmail" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="ContactEmail" class="form-control" />
                    <span asp-validation-for="ContactEmail" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="ContactTel" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="ContactTel" class="form-control" />
                    <span asp-validation-for="ContactTel" class="text-danger"></span>
                </div>
            </div>
            <hr>
            <div class="row form-group">
                <div class="col-md-12">
                    <div class="float-start">
                        <input type="submit" value="更新記錄" class="btn btn-primary" /> 
                    </div>
                    <div class="float-end">
                        @Html.ActionLink("返回我的帳號", "Profile", "User" , new { area = "" } , new {@class = "btn btn-success"}) 
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>